{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "run",
      "type": "pwa-node",
      "program": "${workspaceFolder}/server.tsx",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "--inspect-brk",
        "-A",
        "--no-check"
        // --watch
        // "--watch=static/,routes/,islands/"
      ],
      "smartStep": false,
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "test",
      "type": "pwa-node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--allow-all",
        "--inspect-brk"
      ],
      "smartStep": false,
      "attachSimplePort": 9229
    }
  ]
}
